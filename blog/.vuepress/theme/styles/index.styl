@import "palette.styl"
@import "code.styl"
@import "posts.styl"

#global-layout
  word-wrap: break-word;
  /*margin-top: 300px;*/
  /*margin-bottom: 128px;*/

// set style of links (except buttons, chips and list items)
a
  border-bottom: dotted 1px;
  text-decoration: none;
  color: $color-primary-transparent;

  //&:hover
  //  color: $color-primary;

  &.v-btn, &.v-list-item, &.v-chip
    border-bottom: none;
    &:hover
      color: none

.bottom-tips
  color-grey()
  text-align: center;
  font-size: 14px;

#app-bar-title
  color-white-with-shadow()
  padding-left: 20px;
  overflow: visible;

.post-entry-card-title
  color-white-with-shadow()
  font-size: 32px !important;
  line-height: 40px !important;

.post-entry-card-subtitle
  color-white-with-shadow()

.post-summary
  *
    margin: 0 !important