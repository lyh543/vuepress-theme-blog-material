@import github-markdown

.markdown-body {
  padding: 20px 40px;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Helvetica Neue', Lato, Roboto, 'PingFang SC', 'Microsoft YaHei', sans-serif;
  font-size: 16px;
  line-height: 1.75;

  & pre[class*="language-"] code {
    font-size: 14px;
    line-height: 1;
  }

  & pre[class*="language-"] {
    padding: 1em;
  }
}